---
// Content
import type { CollectionEntry } from "astro:content";

import Links from "@/components/Links.astro";
import { Image } from "astro:assets";

type Props = {
    itinerary: CollectionEntry<"itinerary">
};

const {itinerary} = Astro.props;

const {title, description, duration, heroImage, price, slug, isFeatured} = itinerary.data;

---

<section class="itinerary-hero">
    <div class="u-container itinerary-hero__container">
        <div class="content-md hero__content">
            <h1>{title}</h1>
            <h4>
                {description}
            </h4>
            <div class="itinerary-hero__details">
                <h5>Duration: {duration}</h5>
                <h5>Starting at ${price}</h5>
            </div>
        </div>
        <div class="itinerary-hero__img-wrapper">
            <Image src={heroImage} alt="travel photo" class="itinerary-hero__img" />
        </div>
    </div>
</section>




<style lang="scss" >
.itinerary-hero {
    position: relative;

    &::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 50vh;
        background-image: url("/src/assets/hero-dash-left.svg"), url("/src/assets/hero-dash-right.svg");
        background-repeat: no-repeat;
        background-size: clamp(min(33rem), 50vw, max(52rem));
        background-position: top left -14vw, top right -14vw;
        opacity: .5;
        z-index: -999;
        pointer-events: none;
    }

    @media (width < 56em) {
        &::before {
            background-position: top left -40vw, top right -40vw;
        }
    }

    &__container {
        display: flex;
        flex-flow: column;
        justify-content: center;
        row-gap: var(--_spacing---section-space--main);
    }

    &__content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: var(--_spacing---space--5);
        opacity: 0;
        animation: reveal-up 1.5s ease-in-out .5s forwards;
    }

    &__img-wrapper {
        border-radius: var(--border-radius);
        overflow: hidden;
        position: relative;
        scale: .8;
        
        animation: fade-in linear forwards;
        animation-timeline: view();
        animation-range-start: 500px;
        animation-range-end: 900px;

        &:after {
            content: '';
            position: absolute;
            height: 100%;
            width: 100%;
            left: 0;
            bottom: 0;
            background-color: var(--light-200);
            z-index: 10;
            animation: img-reveal 1.5s ease-in-out 1s forwards;
        }
    }

    &__img {
        aspect-ratio: 16 / 9;
        object-fit: cover;
        width: 100%;
        height: 100%;
        min-height: 500px;
    }

    &__details {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        border-top: 1px solid var(--brand-secondary);
        padding-top: 1rem;
        gap: 1rem;
    }
}
</style>


