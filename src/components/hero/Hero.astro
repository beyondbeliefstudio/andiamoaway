---
import Links from "@/components/Links.astro";

// Images
import { Picture } from "astro:assets";
import heroImage from "@/assets/travel.jpg";

---

<section class="hero">
    <div class="u-container hero__container">
        <div class="content-md hero__content">
            <h1>Let’s Plan Your Next Adventure</h1>
            <p class="large">
                Custom-curated travel design from someone who’s been around the world and back (several times). Let’s make your dream trip happen.
            </p>
            <div class="btn__group">
                <Links href={"/"}>Plan My Trip</Links>
                <Links href={"/"} variant="outline">Explore Itineraries</Links>
            </div>
        </div>
        <div class="hero__img-wrapper">
            <Picture src={heroImage} alt="travel photo" class="hero__img" loading="eager" width={1300} height={1000} />
        </div>
    </div>
</section>




<style lang="scss" is:global>
.hero {
    position: relative;

    &::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 70%;
        background-image: url("/src/assets/hero-dash-left.svg"), url("/src/assets/hero-dash-right.svg");
        background-repeat: no-repeat;
        background-size: clamp(min(33rem), 50vw, max(52rem));
        background-position: top left -14vw, top right -14vw;
        opacity: .5;
        z-index: -999;
        pointer-events: none;
    }

    @media (width < 56em) {
        &::before {
            background-position: top left -40vw, top right -40vw;
        }
    }

    &__container {
        display: flex;
        flex-flow: column;
        justify-content: center;
        row-gap: var(--_spacing---section-space--main);
    }

    &__content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: var(--_spacing---space--5);
        opacity: 0;
        animation: reveal-up 1.5s ease-in-out .5s forwards;
    }

    &__img-wrapper {
        border-radius: var(--border-radius);
        overflow: hidden;
        position: relative;
        // scale: .8;
        
        // animation: fade-in linear forwards;
        // animation-timeline: view();
        // animation-range-start: 500px;
        // animation-range-end: 900px;
    }

    &__img {
        aspect-ratio: 16 / 9;
        object-fit: cover;
        width: 100%;
        height: 100%;
        min-height: 500px;
        clip-path: inset(0% 0% 100% 00%);
        animation: img-reveal 1.5s ease-in-out 1s forwards;
    }
}
</style>


