<style lang="scss" >
.specials-hero {
    position: relative;
    border-bottom: 0px;

    &::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 50vh;
        background-image: url("/src/assets/hero-dash-left.svg"), url("/src/assets/hero-dash-right.svg");
        background-repeat: no-repeat;
        background-size: clamp(min(33rem), 50vw, max(52rem));
        background-position: top left -14vw, top right -14vw;
        opacity: .5;
        z-index: -999;
        pointer-events: none;
    }

    @media (width < 56em) {
        &::before {
            background-position: top left -40vw, top right -40vw;
        }
    }

    &__container {
        display: flex;
        flex-flow: column;
        justify-content: center;
        row-gap: var(--_spacing---section-space--main);
    }

    &__content {
        display: flex;
        flex-direction: column;
        // align-items: center;
        justify-content: center;
        // gap: var(--_spacing---space--5);
        opacity: 0;
        animation: reveal-up 1.5s ease-in-out .5s forwards;
        text-align: left;
    }

    &__img-wrapper {
        border-radius: var(--border-radius);
        overflow: hidden;
        position: relative;
        scale: .8;
        
        animation: fade-in linear forwards;
        animation-timeline: view();
        animation-range-start: 500px;
        animation-range-end: 900px;
    }

    &__img {
        aspect-ratio: 16 / 9;
        object-fit: cover;
        width: 100%;
        height: 100%;
        clip-path: inset(0% 0% 100% 00%);
        animation: img-reveal 1.5s ease-in-out 1s forwards;
    }

    &__details {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        border-top: 1px solid var(--brand-secondary);
        padding-top: 1rem;
        gap: 1rem;
    }

    h1 {
        font-family: var(--secondary-family);
        font-weight: 600;
        font-size: 3rem;
    }
}
</style>


